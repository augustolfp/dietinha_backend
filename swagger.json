{
    "openapi": "3.0.0",
    "info": {
        "title": "Dietinha Calories Tracker",
        "description": "This API was built to track daily macronutrients intake of users, and provides a search mechanism on data provided by TACO-Unicamp.",
        "contact": {
            "email": "augustolfp@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3001/",
            "description": "Local development server automatically setup on docker container build"
        }
    ],
    "paths": {
        "/daily-log": {
            "post": {
                "tags": ["Daily-Logs"],
                "summary": "Insert new Daily Log",
                "description": "The user has to create a Daily Log providing his unique Id and the date of the log (not necessarily the current date). The user will be identified through the Auth Token Payload.",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SentDailyLog"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ReceivedDailyLog"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Missing or Invalid Credentials"
                    },
                    "403": {
                        "description": "User already have a Daily-log in provided Date"
                    },
                    "422": {
                        "description": "Invalid or incomplete Request Body"
                    }
                }
            },
            "get": {
                "tags": ["Daily-Logs"],
                "summary": "Get user's Daily Logs",
                "description": "Returns a summary of calories intake by day, for specific user",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ReceivedDailyLogArray"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Missing or Invalid Credentials"
                    }
                }
            }
        },
        "/daily-log/{daily-log-id}": {
            "get": {
                "tags": ["Daily-Logs"],
                "summary": "Get a detailed description of a specific user daily-log",
                "description": "",
                "parameters": [
                    {
                        "name": "daily-log-id",
                        "in": "path",
                        "description": "Id of the daily-log",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ReceivedDetailedDailyLog"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Missing or Invalid Credentials"
                    },
                    "404": {
                        "description": "User does not have a daily-log with provided id"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "SentDailyLog": {
                "type": "object",
                "required": ["date", "caloriesTarget", "proteinsTarget"],
                "properties": {
                    "date": {
                        "type": "string",
                        "example": "yyyy-MM-dd"
                    },
                    "notes": {
                        "type": "string",
                        "example": "It was a busy day, couldn't cook anything myself"
                    },
                    "caloriesTarget": {
                        "type": "number",
                        "example": 2500
                    },
                    "proteinsTarget": {
                        "type": "number",
                        "example": 130
                    }
                }
            },
            "ReceivedDailyLog": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "date": {
                        "type": "string",
                        "example": "yyyy-MM-dd"
                    },
                    "notes": {
                        "type": "string",
                        "example": "It was a busy day, couldn't cook anything myself"
                    },
                    "userId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "caloriesTarget": {
                        "type": "number",
                        "example": 2500
                    },
                    "proteinsTarget": {
                        "type": "number",
                        "example": 130
                    }
                }
            },
            "ReceivedDailyLogArray": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "date": {
                        "type": "string",
                        "example": "yyyy-MM-dd"
                    },
                    "notes": {
                        "type": "string",
                        "example": "It was a busy day, couldn't cook anything myself"
                    },
                    "userId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "caloriesTarget": {
                        "type": "number",
                        "example": 2500
                    },
                    "proteinsTarget": {
                        "type": "number",
                        "example": 130
                    },
                    "carbs": {
                        "type": "number",
                        "example": 0
                    },
                    "fats": {
                        "type": "number",
                        "example": 0
                    },
                    "proteins": {
                        "type": "number",
                        "example": 0
                    },
                    "kcals": {
                        "type": "number",
                        "example": 0
                    }
                }
            },
            "Ingredient": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string",
                        "example": "Arroz branco"
                    },
                    "mealId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "weight": {
                        "type": "number",
                        "example": 120
                    },
                    "carbs": {
                        "type": "number",
                        "example": 20
                    },
                    "fats": {
                        "type": "number",
                        "example": 5
                    },
                    "proteins": {
                        "type": "number",
                        "example": 3
                    },
                    "kcals": {
                        "type": "number",
                        "example": 250
                    }
                }
            },
            "Meal": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string",
                        "example": "Almo√ßo"
                    },
                    "description": {
                        "type": "string",
                        "example": "Pedi no Ifood"
                    },
                    "createdAt": {
                        "type": "string"
                    },
                    "dailyLogId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "carbs": {
                        "type": "number",
