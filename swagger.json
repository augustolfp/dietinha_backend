                    "kcals": {
                        "type": "number",
                        "example": 0
                    },
                    "mealsList": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "$ref": "#/components/schemas/Meal"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "description": "Authentication using JWT provided by firebaseAuth",
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ]
}
